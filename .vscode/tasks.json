	"version": "2.0.0",
	"tasks": [
		{
			"label": "Normal mode",
			"type": "shell",
			"windows": {
                "command": ".\\run.cmd"
			},
			"linux": {
                "command": "./run"
			},
			"group": "test",
		},
		{
			"label": "Debug mode",
			"type": "shell",
			"windows": {
                "command": ".\\run.cmd"
			},
			"linux": {
                "command": "./run"
			},
			"args": [
				"--debug", "--color"
			],
			"group": {"kind":"test", "isDefault":true}
		}
	]
}